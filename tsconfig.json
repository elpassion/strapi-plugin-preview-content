{
  "compilerOptions": {
    "outDir": ".",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["external-types/*", "src/**/*", "src/**/*.json"],
  "exclude": ["**/node_modules/**/*", "**/dist/**/*"]
}
